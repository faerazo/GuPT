# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Model Configuration
MODEL_NAME=gpt-4.1-mini-2025-04-14
EMBEDDING_MODEL=text-embedding-3-small
TEMPERATURE=0.1
MAX_TOKENS=2000

# Database Configuration
CHROMA_DB_PATH=./data/chroma
COLLECTION_NAME=course_docs

# Text Splitting Configuration
CHUNK_SIZE=2000
CHUNK_OVERLAP=200

# Retrieval Configuration
RETRIEVAL_K_COURSE=20
RETRIEVAL_K_PROGRAM=15
RETRIEVAL_K_BOTH=25

# Embedding Configuration
EMBEDDING_CHUNK_SIZE=1000
EMBEDDING_MAX_RETRIES=3
EMBEDDING_REQUEST_TIMEOUT=60

# Memory Configuration
MEMORY_WINDOW_SIZE=3

# Logging Configuration
LOG_FILE=chat_history.json
LOG_LEVEL=INFO
DEBUG_MODE=false

# Directory Paths
DATA_BASE_PATH=./data
COURSES_MD_PATH=data/courses/md
COURSES_PDF_PATH=data/courses/pdf
PROGRAMS_MD_PATH=data/programs/md
PROGRAMS_PDF_PATH=data/programs/pdf

# Interface Configuration
GRADIO_PORT=7860
GRADIO_SHARE=false

# Telemetry Configuration (Keep these disabled)
LANGCHAIN_TRACING_V2=false
ANONYMIZED_TELEMETRY=false
POSTHOG_DISABLED=true
CHROMA_TELEMETRY_DISABLED=true
DO_NOT_TRACK=1